<form>
  <div class="form-group">
    <label for="author">UserName:</label>
    {{input value=author id='author'}}
  </div>
  <div class="form-group">
    <label for="friend">Friendliness Rating:</label>
    <select id="friend" onchange={{action 'friendlinessRating' value="target.value"}}>
      <option value="1">&#9829;</option>
      <option value="2">&#9829;&#9829;</option>
      <option value="3" selected>&#9829;&#9829;&#9829;</option>
      <option value="4">&#9829;&#9829;&#9829;&#9829;</option>
      <option value="5">&#9829;&#9829;&#9829;&#9829;&#9829;</option>
    </select>
  </div>
  <div class="form-group">
    <label for="skill">Skill Rating:</label>
    <select id="skill" onchange={{action 'skillRating' value="target.value"}}>
      <option value="1">&#9889;</option>
      <option value="2">&#9889;&#9889;</option>
      <option value="3" selected>&#9889;&#9889;&#9889;</option>
      <option value="4">&#9889;&#9889;&#9889;&#9889;</option>
      <option value="5">&#9889;&#9889;&#9889;&#9889;&#9889;</option>
    </select>
  </div>
  <div class="form-group">
    <label for="details">Description:</label>
    {{textarea value=details id='details'}}
  </div>
  <button class="ui primary button" {{action 'makeReview'}}>Submit</button>
  <button class="ui button" {{action 'cancelNewReview'}}>Cancel</button>
</form>
