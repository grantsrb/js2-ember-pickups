<form>
  <div class="form-group">
    <label for="sport">Sport</label>
    <select id="sport" onchange={{action 'sportChoice' value="target.value"}}>
      <option value="Soccer" selected>Soccer</option>
      <option value="Ultimate">Ultimate</option>
      <option value="Football">Football</option>
      <option value="Basketball">Basketball</option>
      <option value="Hockey">Hockey</option>
      <option value="Baseball">Baseball</option>
    </select>
  </div>
  <div class="form-group">
    <label for="location">Location</label>
    {{input value=location id='location'}}
  </div>
  <div class="form-group">
    <label for="day">Day of Week</label>
    {{input value=day id='day'}}
  </div>
  <div class="form-group">
    <label for="time">Time</label>
    {{input value=time id='time'}}
  </div>
  <div class="form-group">
    <label for="skill">Skill Level</label>
    <select id="skill" onchange={{action 'skillChoice' value="target.value"}}>
      <option value="All Skill Levels" selected>All Skill Levels</option>
      <option value="inexperienced">Inexperienced</option>
      <option value="Experienced">Experienced</option>
      <option value="Advanced">Advanced</option>
    </select>
  </div>
  <div class="form-group">
    <label for="cost">Cost (optional)</label>
    {{input value=cost id='cost'}}
  </div>
  <div class="form-group">
    <label for="details">Details</label>
    {{input value=details id='details'}}
  </div>
  <button class="ui primary button" {{action 'makeGroup'}}>Submit</button>
</form>
